:80 {
    root * /var/www/html/public

    encode gzip

    php_fastcgi app:9000

    file_server

    log {
        output stdout
        format console
    }

    @static {
        file
        path *.ico *.css *.js *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2
    }
    handle @static {
        header Cache-Control "public, max-age=31536000"
    }

    handle_errors {
        respond "{err.status_code} {err.status_text}"
    }
}
